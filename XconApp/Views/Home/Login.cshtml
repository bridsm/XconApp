
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<form action="/login" method="post">
    <div class="row ">
        <div class=" col-sm-6">
            <div class="col-sm-2">
                <label>ID: </label>
            </div>
            <div class="col-sm-10">
                <input type="text" id="UserID" name="UserID" />
            </div>
            <div class="col-sm-12">&nbsp;</div>
            <div class="col-sm-2">
                <label>Password: </label>
            </div>
            <div class="col-sm-10">
                <input type="password" id="Password" name="Password" />
            </div>
            <div class="col-sm-12">&nbsp;</div>

            <div class="col-sm-2 "><button type="submit" class="btn btn-primary">Login</button></div>
            <div class="col-sm-2 "><button type="reset" class="btn btn-warning">Cancel</button></div>

        </div>
    </div>
</form>